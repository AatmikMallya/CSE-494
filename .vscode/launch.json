    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test My Model Windows",
            "type": "python",
            "python": "${workspaceFolder}/tcr-env/Scripts/python.exe",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args":  [
                "--infile", "data/student_dataset.csv", 
                "--idx_test_fold", "4",
                "--idx_val_fold", "-1",
                "--model_name", "sample.ckpt",
                "--epoch", "10",
                "--cuda", "False"
            ]
        },

        // You will still need to select a python interpreter in VSCode when prompted
        {
            "name": "Test My Model Linux",
            "type": "python",
            "python": "${workspaceFolder}/tcr-env/bin/python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args":  [
                "--infile", "data/student_dataset.csv", 
                "--idx_test_fold", "4",
                "--idx_val_fold", "-1",
                "--model_name", "sample.ckpt",
                "--epoch", "10",
                "--cuda", "False"
            ]
        }
    ]
